.tasks-list
  h5 oday's Tasks
  input(type="text" class="add-task" placeholder="Add Your Task Here... (Max 4)")
  select#priorty(name="priorty")
    option(value="priorty 1") priorty 1
    option(value="priorty 2") priorty 2
    option(value="priorty 3") priorty 3
    option(value="priorty 4") priorty 4

  .to-do-tasks
    h4 tasks to do
    .priorty1-task
    .priorty2-task
    .priorty3-task
    .priorty4-task
  .comp-tasks

  .Today-sessions
    //- How many Sessions
    lable How many Sessions you want to do Today 
    select#pomoNum(name="pomoNum")
      option(value= 8) 8 Sessions
      option(value= 12) 12 Sessions
      option(value= 16) 16 Sessions

    //- Work Sessions
    .work-session.row
      .progress
      i.fas.fa-plus-circle.col-md-1
    
    //- Break Session
    .work-session.break-session
      select#smthngfun(name="smthngfun")
        option(value= 'read quran') Read Quran
        option(value= 'read book') Read Book
        option(value= 'Podcast') Podcast
        option(value= 'workout') Workout
      .timer-session 
        span.timer 25:00
      span.doing-now test      

